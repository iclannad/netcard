<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="blink.com.blinkcard320">

    !-- 权限列表 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 直接打电话的权限-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- feature -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.Activity.Login"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Controller.Activity.MainActivity"
            android:launchMode="singleTask" />
        <activity android:name=".camera.CameraActivity" />
        <activity android:name=".Controller.Activity.TransSportActivity" />
        <activity android:name=".Controller.Activity.FileRecordActivity" />
        <activity android:name=".Controller.Activity.FilePreviewActivity" />

        <!--子菜单-->
        <activity android:name=".Controller.Activity.slidingmenu.AboutActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.FeedbackActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.SettingsActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.ShopActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.UserinfoActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.AlterUserPWDActivity" />

        <!--设置-->
        <activity android:name=".Controller.Activity.slidingmenu.settings.Filelook" />
        <activity android:name=".Controller.Activity.slidingmenu.settings.QuickStartActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.settings.SkinActivity" />
        <activity android:name=".Controller.Activity.slidingmenu.settings.FilelookPC" />

    </application>

</manifest>