<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shareRelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circlebackgroud">

    <LinearLayout
        android:id="@+id/shareLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:orientation="vertical"
        android:padding="@dimen/marginBig">

        <TextView
            android:id="@+id/shareText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/marginBig"
            android:textColor="@color/Greyer"
            android:textSize="@dimen/textSize"
            android:visibility="gone" />

        <EditText
            android:id="@+id/shareEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/routeredit"
            android:gravity="center_vertical"
            android:padding="@dimen/editMargin"
            android:textColor="@color/Grey"
            android:textColorHint="@color/GreyDeep"
            android:textSize="@dimen/textsize_small" />


        <EditText
            android:id="@+id/shareEdit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBig"
            android:background="@drawable/routeredit"
            android:gravity="center_vertical"
            android:padding="@dimen/editMargin"
            android:textColor="@color/Grey"
            android:textColorHint="@color/GreyDeep"
            android:textSize="@dimen/textsize_small"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/butHeight"
        android:layout_below="@id/shareLinear"
        android:layout_marginTop="@dimen/marginBig"
        android:background="@drawable/circlebottomback"
        android:orientation="horizontal"
        android:paddingTop="@dimen/ItemSpace">

        <TextView
            android:id="@+id/shareCancal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_cancal"
            android:gravity="center"
            android:text="@string/cancal"
            android:textColor="@color/MainColorBlue"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/shareEnter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ItemSpace"
            android:layout_weight="1"
            android:background="@drawable/button_enter"
            android:gravity="center"
            android:text="@string/center"
            android:textColor="@color/MainColorBlue"
            android:textSize="@dimen/textSize" />

    </LinearLayout>
</RelativeLayout>