<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/loginEditRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/init_activity_button_want"
            android:layout_width="match_parent"
            android:layout_height="@dimen/butHeight"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/marginBiggest"
            android:layout_marginRight="@dimen/marginBiggest"
            android:layout_marginTop="@dimen/marginBiggest"
            android:background="@drawable/buttonblue"
            android:gravity="center"
            android:text="@string/activity_init_connect"
            android:textColor="@color/White"
            android:textSize="@dimen/listTextNormal" />

        <RelativeLayout
            android:id="@+id/init_checkLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/init_activity_button_want"
            android:layout_marginTop="@dimen/marginBiggest"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/marginBiggest"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/activity_checkbox_autologin"
                    android:layout_width="@dimen/listRightSettingHeight"
                    android:layout_height="@dimen/listRightSettingHeight"
                    android:background="@drawable/checkbox_login"
                    android:button="@null"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/init_auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginNormal"
                    android:text="@string/autologin"
                    android:textSize="@dimen/listTextNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginBiggest"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/activity_checkbox_remeberpassword"
                    android:layout_width="@dimen/listRightSettingHeight"
                    android:layout_height="@dimen/listRightSettingHeight"
                    android:background="@drawable/checkbox_login"
                    android:button="@null"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/init_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginNormal"
                    android:text="@string/remeberpw"
                    android:textSize="@dimen/listTextNormal" />

            </LinearLayout>
        </RelativeLayout>


        <EditText
            android:id="@+id/activity_init_edit_passwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/butHeight"
            android:layout_above="@id/init_checkLinear"
            android:layout_marginLeft="@dimen/marginBigger"
            android:layout_marginRight="@dimen/marginBigger"
            android:background="@drawable/editsytle"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ`~!@#$^&amp;*()-=_+[]{};:\&apos;\&quot;\\|/?.,&lt;>/%Â "
            android:hint="@string/pawssword"
            android:inputType="textPassword"
            android:padding="@dimen/marginBig"
            android:textColorHint="@color/Grey"
            android:textSize="@dimen/listTextNormal" />

        <RelativeLayout
            android:id="@+id/init_idLinear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/butHeight"
            android:layout_above="@id/activity_init_edit_passwd"
            android:layout_marginLeft="@dimen/marginBigger"
            android:layout_marginRight="@dimen/marginBigger">

            <EditText
                android:id="@+id/init_activity_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/butHeight"
                android:background="@drawable/editsytle"
                android:hint="@string/username"
                android:padding="@dimen/marginBig"
                android:textColorHint="@color/Grey"
                android:textSize="@dimen/listTextNormal" />

            <ImageView
                android:id="@+id/init_downImage"
                android:layout_width="@dimen/marginBiggest"
                android:layout_height="@dimen/marginBiggest"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/marginBig"
                android:src="@mipmap/init_down" />
        </RelativeLayout>


