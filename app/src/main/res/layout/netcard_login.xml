        <ImageView
            android:id="@+id/loginLogo"
            android:layout_width="@dimen/logoHeight"
            android:layout_height="@dimen/logoHeight"
            android:layout_above="@id/init_idLinear"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/searchLogo"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginScanRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/init_activity_button_sweep"
            android:layout_width="@dimen/logoHeight"
            android:layout_height="@dimen/logoHeight"
            android:layout_centerInParent="true"
            android:background="@drawable/qcodeonclick" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/init_activity_button_sweep"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginBig"
            android:text="@string/activity_Qcode"
            android:textColor="@color/Greyer"
            android:textSize="@dimen/listTextNormal" />
    </RelativeLayout>

</LinearLayout>